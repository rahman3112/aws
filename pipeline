pipeline {
    agent any
    tools{
        maven 'MAVEN_HOME'
    }
    stages {
        stage('git repo & clean') {
            steps {
                //bat "rmdir  /s /q mavenjava"
                deleteDir()
                bat "git clone https://github.com/rahman3112/maven-java-lab.git"
                bat "mvn clean -f maven-java-lab"
            }
        }
        stage('install') {
            steps {
                bat "mvn install -f maven-java-lab" 
            }
        }
        stage('test') {
            steps {
                bat "mvn test -f maven-java-lab"
            }
        }
        stage('package') {
            steps {
                bat "mvn package -f maven-java-lab"
            }
        }
    }
}
